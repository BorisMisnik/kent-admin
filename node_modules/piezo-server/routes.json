[
    {
        "//": "Login made here ( get `username` and `password` from PORT or GET )",
        "method": "post",
        "url": "/login",
        "script": "./libs/account",
        "handler": "login",
        "auth": { "login": true }
    },
    {
        "//": "Login made here ( get `username` and `password` from PORT or GET )",
        "method": "get",
        "url": "/logout",
        "script": "./libs/account",
        "handler": "logout",
        "__auth": { "logged": true }
    },
    {
        "//": "Reset password and send it in the mail",
        "method": "post",
        "url": "/account/remind",
        "script": "./libs/account",
        "handler": "remind"
    },



    {
        "//": "Get user",
        "method": "get",
        "url": "/user",
        "script": "./libs/account",
        "handler": "user"
    },
    {
        "//": "Get user info + Check is authorized ( and get user info, with role value )",
        "method": "get",
        "url": "/account",
        "script": "./libs/account",
        "handler": "account",
        "auth": { "logged": true }
    },
    {
        "//": "Sign up user (!)",
        "method": "post",
        "url": "/account/signup",
        "script": "./libs/account",
        "handler": "signup"
    },
    {
        "//": "Update single user profile ( card )",
        "method": "post",
        "url": "/account/profile",
        "script": "./libs/account",
        "handler": "updateProfile",
        "auth": { "logged": true }
    },



    {
        "//": "Get accounts list",
        "method": "get",
        "url": "/accounts",
        "script": "./libs/account",
        "handler": "accountsList",
        "auth": { "roles": [ "operator", "admin" ]}
    },
    {
        "//": "Get accounts list ( with query parameters )",
        "method": "post",
        "url": "/accounts",
        "script": "./libs/account",
        "handler": "accountsList",
        "auth": { "roles": [ "operator", "admin" ]}
    },
    {
        "//": "Get accounts list ( with query parameters )",
        "method": "get",
        "url": "/accounts/totals/:type?",
        "script": "./libs/account",
        "handler": "totals",
        "auth": { "roles": [ "operator", "admin" ]}
    },
    {
        "//": "Get account information ( id or current )",
        "method": "get",
        "url": "/accounts/id/:id",
        "script": "./libs/account",
        "handler": "account",
        "auth": { "roles": [ "operator", "admin" ]}
    },
    {
        "//": "TODO: Update account information ( id or current )",
        "method": "post",
        "url": "/accounts/id/:id",
        "script": "./libs/account",
        "handler": "account",
        "auth": { "roles": [ "operator", "admin" ]}
    },
    {
        "//": "Get account Photo ( base64 )",
        "method": "get",
        "url": "/accounts/id/:id/photo",
        "script": "./libs/account",
        "handler": "photo",
        "auth": { "roles": [ "operator", "admin" ]}
    },
    {
        "//": "Allow/deny account",
        "method": "get",
        "url": "/accounts/id/:id/permission/:action",
        "script": "./libs/account",
        "handler": "permission",
        "auth": { "roles": [ "operator", "admin" ]}
    },


    {
        "//": "Feedback form",
        "method": "post",
        "url": "/feedback",
        "script": "./libs/feedback",
        "handler": "feedback"
    },


    {
        "//": "Generate menu items list ( by role of user )",
        "method": "get",
        "url": "/menu/items",
        "script": "./libs/menu",
        "handler": "items",
        "auth": { "logged": true }
    },


    {
        "//": "Switch the Desktop ( will redirect to `desktop.*.js )",
        "method": "get",
        "url": "/app/desktop.js",
        "script": "./libs/desktop",
        "handler": "desktop",
        "_auth": { "logged": true }
    },
    {
        "method": "get",
        "url": "/app/desktop.visitor.js",
        "auth": { "roles": [ "visitor", "operator", "admin" ]}
    },
    {
        "method": "get",
        "url": "/app/desktop.operator.js",
        "auth": { "roles": [ "operator", "admin" ]}
    },
    {
        "method": "get",
        "url": "/app/desktop.admin.js",
        "auth": { "roles": [ "admin" ]}
    }






]